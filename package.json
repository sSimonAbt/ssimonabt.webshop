{
    "name": "ssimonabt.webshop",
    "scripts": {
        "build": "mbt build --mtar ssimonabt.webshop.mtar",
        "build:workspaces": "npm run build --workspaces --if-present",
        "deploy": "cf deploy mta_archives/ssimonabt.webshop.mtar --retries 0",
        "lint": "npm run lint --workspaces --if-present",
        "ui5lint": "npm run ui5lint --workspaces --if-present",
        "start:uimodule": "npm start --workspace uimodule",
        "start:server": "npm start --workspace server",
        "dev:server": "npm run dev --workspace server"
    },
    "dependencies": {
        "@sap/cds-common-content": "^3.0.1",
        "mbt": "^1"
    },
    "workspaces": [
        "uimodule",
        "server"
    ]
}
